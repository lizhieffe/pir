<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/movement_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Movement " />

    <Button
        android:id="@+id/measure_distance_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Measure DIstance" />

    <TextView
        android:id="@+id/ambient_light_value_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luminance Placeholder" />

    <TextView
        android:id="@+id/gesture_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gesture Placeholder" />
</LinearLayout>